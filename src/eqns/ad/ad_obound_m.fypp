      module procedure ${P}$_ad_obound_t_
   end interface ${P}$_ad_obound_t

   ! Access specifiers

   public :: ${P}$_ad_obound_t

   ! Default access

   private

contains

   function ${P}$_ad_obound_t_(cx, os_p) result(bd)

      type(context_t), pointer, intent(in) :: cx
      type(osc_par_t), intent(in)          :: os_p
      type(${P}$_ad_obound_t)              :: bd

      class(model_t), pointer :: ml
      type(point_t)           :: pt

      ! Construct the ${P}$_ad_obound type

      ml => cx%model()
      pt = cx%point_o()

      select case (os_p%outer_bound)
      case ('VACUUM')
         bd%build_ => build_vacuum_
      case ('ZERO_R')
         bd%build_ => build_zero_r_
      case ('ZERO_H')
         bd%build_ => build_zero_h_
      case ('DZIEM')
         if (ml%is_vacuum(pt)) then
            bd%build_ => build_vacuum_
         else
            bd%build_ => build_dziem_
         end if
      case ('ISOTHERMAL')
         if (ml%is_vacuum(pt)) then
            bd%build_ => build_vacuum_
         else
            bd%build_ => build_decomp_
         end if
      case ('UNNO')
         if (ml%is_vacuum(pt)) then
            bd%build_ => build_vacuum_
         else
            bd%build_ => build_decomp_
         end if
      case ('JCD')
         if (ml%is_vacuum(pt)) then
            bd%build_ => build_vacuum_
         else
            bd%build_ => build_jcd_
         end if
      case ('GAMMA1')
         bd%build_ => build_gamma1_
      case ('GAMMA2')
         bd%build_ => build_gamma2_
      case default
         @:ABORT('invalid outer_bound')
      end select

      bd%cx => cx

      ! Store structure coefficients

      call check_model(ml, [I_V_2,I_U,I_C_1,I_GAMMA_1,I_OMEGA_ROT])

      bd%V_2 = ml%coeff(I_V_2, pt)
      bd%V = bd%V_2*pt%x**2
      bd%U = ml%coeff(I_U, pt)

      bd%Omega_rot = cx%Omega_rot(pt)

      select case (os_p%outer_bound)
      case ('VACUUM', 'ZERO_R', 'ZERO_H', 'DZIEM', 'GAMMA1', 'GAMMA2')
         bd%V_g = bd%V/ml%coeff(I_GAMMA_1, pt)
         bd%As = ml%coeff(I_AS, pt)
         bd%c_1 = ml%coeff(I_C_1, pt)
      case ('ISOTHERMAL')
         call eval_atmos_coeffs_isothrm(ml, pt, bd%V_g, &
            bd%As, bd%c_1)
      case ('UNNO')
         call eval_atmos_coeffs_unno(ml, pt, bd%V_g, &
            bd%As, bd%c_1)
      case ('JCD')
         call eval_atmos_coeffs_isothrm(ml, pt, bd%V_g, &
            bd%As, bd%c_1)
      case default
         @:ABORT('invalid outer_bound')
      end select

      ! Other initializations

      bd%n_b = 2

      bd%n_e = 4

      ! Finish

      return

   end function ${P}$_ad_obound_t_

   !****

   subroutine build(this, st, B)

      class(${P}$_ad_obound_t), intent(in) :: this
      class(state_rt), intent(in)          :: st
      real(RD), intent(out)                :: B(:,:)

      ! Evaluate the outer boundary conditions

      call this%build_(st, B)

      ! Finish

      return

   end subroutine build

   !****

   subroutine build_vacuum_(this, st, B)

      class(${P}$_ad_obound_t), intent(in) :: this
      class(state_rt), intent(in)          :: st
      real(RD), intent(out)                :: B(:,:)

      real(RD) :: omega_c
      real(RD) :: lambda
      real(RD) :: l_e

      @:CHECK_BOUNDS(SIZE(B, 1), this%n_b)
      @:CHECK_BOUNDS(SIZE(B, 2), this%n_e)

      ! Evaluate the outer boundary conditions (vacuum)

      associate( &
         omega => st%omega, &
         V_2 => this%V_2, &
         U => this%U, &
         c_1 => this%c_1, &
         Omega_rot => this%Omega_rot, &
         alpha_grv => this%cx%alpha_grv, &
         alpha_gbc => this%cx%alpha_gbc, &
         alpha_omg => this%cx%alpha_omg, &
         m => this%cx%m)

         omega_c = omega - m*Omega_rot

         lambda = this%cx%lambda(Omega_rot, st)
         l_e = this%cx%l_e(Omega_rot, st)

         ! Set up the matrix

         #:include 'OB_vacuum.inc'

      end associate

      ! Finish

      return

   end subroutine build_vacuum_

