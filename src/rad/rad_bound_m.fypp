   end subroutine build_o

   !****

   subroutine build_o_vacuum_(this, st, B)

      class(${P}$_rad_bound_t), intent(in) :: this
      class(state_rt), intent(in)          :: st
      real(RD), intent(out)                :: B(:,:)

      real(RD) :: omega_c

      @:CHECK_BOUNDS(SIZE(B, 1), this%n_o)
      @:CHECK_BOUNDS(SIZE(B, 2), this%n_e)

      ! Evaluate the outer boundary conditions (vacuum)

      associate( &
         omega => st%omega, &
         V_2 => this%V_2_o, &
         U => this%U_o, &
         c_1 => this%c_1_o, &
         alpha_omg => this%cx%alpha_omg)

         omega_c = omega

         ! Set up the matrix

         #:include 'B_o_vacuum.inc'

      end associate

      ! Finish

      return

   end subroutine build_o_vacuum_

   !****

   subroutine build_o_zero_r_(this, st, B)

      class(${P}$_rad_bound_t), intent(in) :: this
      class(state_rt), intent(in)          :: st
      real(RD), intent(out)                :: B(:,:)

      @:CHECK_BOUNDS(SIZE(B, 1), this%n_o)
      @:CHECK_BOUNDS(SIZE(B, 2), this%n_e)

      ! Evaluate the outer boundary conditions (zero radial
      ! displacement)

      associate( &
         V_2 => this%V_2_o)

         ! Set up the matrix

         #:include 'B_o_zero_r.inc'

      end associate

      ! Finish

      return

   end subroutine build_o_zero_r_

   !****

   subroutine build_o_dziem_(this, st, B)

      class(${P}$_rad_bound_t), intent(in) :: this
      class(state_rt), intent(in)          :: st
      real(RD), intent(out)                :: B(:,:)

      real(RD) :: omega_c

      @:CHECK_BOUNDS(SIZE(B, 1), this%n_o)
      @:CHECK_BOUNDS(SIZE(B, 2), this%n_e)

      ! Evaluate the outer boundary conditions ([Dzi1971] formulation)

      associate( &
         omega => st%omega, &
         V_2 => this%V_2_o, &
         V => this%V_o, &
         c_1 => this%c_1_o, &
         alpha_omg => this%cx%alpha_omg)

         omega_c = omega

         ! Set up the matrix

         #:include 'B_o_dziem.inc'

      end associate

      ! Finish

      return

   end subroutine build_o_dziem_

   !****

   subroutine build_o_decomp_(this, st, B)

      class(${P}$_rad_bound_t), intent(in) :: this
      class(state_rt), intent(in)          :: st
      real(RD), intent(out)                :: B(:,:)

      real(RD) :: omega_c
      real(RD) :: a_11
      real(RD) :: a_12
      real(RD) :: chi

      @:CHECK_BOUNDS(SIZE(B, 1), this%n_o)
      @:CHECK_BOUNDS(SIZE(B, 2), this%n_e)

      ! Evaluate the outer boundary conditions, based on a local
      ! eigendecomposition

      associate( &
         omega => st%omega, &
         V_2 => this%V_2_o, &
         V_g => this%V_g_o, &
         As => this%As_o, &
         c_1 => this%c_1_o, &
         alpha_omg => this%cx%alpha_omg)

         omega_c = omega

         ! Evaluate selected elements of the Jacobian matrix

         a_11 = V_g - 3._RD
         a_12 = -V_g

         ! Evaluate the eigenvalue for the wave we want to keep

         chi = atmos_chi(V_g, As, c_1, alpha_omg, omega_c, 0._RD)

         ! Set up the matrix

         #:include 'B_o_decomp.inc'

      end associate

      ! Finish

      return

   end subroutine build_o_decomp_

   !****

   subroutine build_o_jcd_(this, st, B)

      class(${P}$_rad_bound_t), intent(in) :: this
      class(state_rt), intent(in)          :: st
      real(RD), intent(out)                :: B(:,:)

      real(RD) :: omega_c
      real(RD) :: chi
      real(RD) :: b_11
      real(RD) :: b_12

      @:CHECK_BOUNDS(SIZE(B, 1), this%n_o)
      @:CHECK_BOUNDS(SIZE(B, 2), this%n_e)

      ! Evaluate the outer boundary conditions ([Chr2008] formulation)

      ! Calculate coefficients

      associate( &
         omega => st%omega, &
         V_2 => this%V_2_o, &
         V_g => this%V_g_o, &
         As => this%As_o, &
         c_1 => this%c_1_o, &
         alpha_omg => this%cx%alpha_omg)

         omega_c = omega

         chi = atmos_chi(V_g, As, c_1, alpha_omg, omega_c, 0._RD)

         b_11 = V_g - 3._RD
         b_12 = -V_g

         ! Set up the boundary conditions

         #:include 'B_o_jcd.inc'
         B(1,2) = -b_12

      end associate

      ! Finish

      return

   end subroutine build_o_jcd_

end module ${P}$_rad_bound_m
