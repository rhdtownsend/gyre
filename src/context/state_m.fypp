#:include 'gyre.inc'

module state_m

   ! Uses

   use forum_m, only: RD

   ! No implicit typing

   implicit none

   ! Derived-type definitions

   type :: state_rt
      real(RD) :: omega = 0._RD
   end type state_rt

   type :: state_ct
      complex(RD) :: omega = 0._RD
      real(RD)    :: omega_r = 0._RD
   end type state_ct

   ! Access specifiers

   public :: state_rt
   public :: state_ct

   ! Default access

   private

end module state_m
