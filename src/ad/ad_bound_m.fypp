      real(RD)                   :: V_o
      real(RD)                   :: V_2_o
      real(RD)                   :: V_g_o
      real(RD)                   :: As_o
      real(RD)                   :: U_o
      real(RD)                   :: c_1_i
      real(RD)                   :: c_1_o
      real(RD)                   :: Omega_rot_o
      procedure(build_), pointer :: build_i_
      procedure(build_), pointer :: build_o_
   contains
      private
      procedure, public :: build_i
      procedure, public :: build_o
   end type ${P}$_ad_bound_t

   ! Interfaces

   interface
      subroutine build_(this, st, B)
         use forum_m, only: RD
         use state_m
         import ${P}$_ad_bound_t
         class(${P}$_ad_bound_t), intent(in) :: this
         class(state_rt), intent(in)        :: st
         real(RD), intent(out)              :: B(:,:)
      end subroutine build_
   end interface

   interface ${P}$_ad_bound_t
      module procedure ${P}$_ad_bound_t_
   end interface ${P}$_ad_bound_t

   ! Access specifiers

   public :: ${P}$_ad_bound_t

   ! Default access

   private

contains

   function ${P}$_ad_bound_t_(cx, os_p) result(bd)

      type(context_t), pointer, intent(in) :: cx
      type(osc_par_t), intent(in)          :: os_p
      type(${P}$_ad_bound_t)               :: bd

      class(model_t), pointer :: ml
      type(point_t)           :: pt_i
      type(point_t)           :: pt_o

      ! Construct the ${P}$_ad_bound type

      ml => cx%model()
      pt_i = cx%point_i()
      pt_o = cx%point_o()

      select case (os_p%inner_bound)
      case ('REGULAR')
         @:ASSERT(pt_i%x == 0._RD, 'boundary condition invalid for x /= 0')
         bd%build_i_ => build_i_regular_
      case ('ZERO_R')
         @:ASSERT(pt_i%x /= 0._RD, 'boundary condition invalid for x == 0')
         bd%build_i_ => build_i_zero_r_
      case ('ZERO_H')
         @:ASSERT(pt_i%x /= 0._RD, 'boundary condition invalid for x == 0')
         bd%build_i_ => build_i_zero_h_
      case default
         @:ABORT('invalid inner_bound')
      end select

      select case (os_p%outer_bound)
      case ('VACUUM')
         bd%build_o_ => build_o_vacuum_
      case ('ZERO_R')
         bd%build_o_ => build_o_zero_r_
      case ('ZERO_H')
         bd%build_o_ => build_o_zero_h_
      case ('DZIEM')
         if (ml%is_vacuum(pt_o)) then
            bd%build_o_ => build_o_vacuum_
         else
            bd%build_o_ => build_o_dziem_
         end if
      case ('ISOTHERMAL')
         if (ml%is_vacuum(pt_o)) then
            bd%build_o_ => build_o_vacuum_
         else
            bd%build_o_ => build_o_decomp_
         end if
      case ('UNNO')
         if (ml%is_vacuum(pt_o)) then
            bd%build_o_ => build_o_vacuum_
         else
            bd%build_o_ => build_o_decomp_
         end if
      case ('JCD')
         if (ml%is_vacuum(pt_o)) then
            bd%build_o_ => build_o_vacuum_
         else
            bd%build_o_ => build_o_jcd_
         end if
      case ('GAMMA1')
         bd%build_o_ => build_o_gamma1_
      case ('GAMMA2')
         bd%build_o_ => build_o_gamma2_
      case default
         @:ABORT('invalid outer_bound')
      end select

      bd%cx => cx

      ! Store structore coefficients

      call check_model(ml, [I_V_2,I_U,I_C_1,I_GAMMA_1,I_OMEGA_ROT])

      bd%c_1_i = ml%coeff(I_C_1, pt_i)
      bd%V_2_i = ml%coeff(I_C_1, pt_i)

      select case (os_p%outer_bound)
      case ('VACUUM', 'ZERO_R', 'ZERO_H')
         bd%V_o = ml%coeff(I_V_2, pt_o)*pt_o%x**2
      case ('DZIEM')
         bd%V_o = ml%coeff(I_V_2, pt_o)*pt_o%x**2
      case ('ISOTHERMAL')
         call eval_atmos_coeffs_isothrm(ml, pt_o, bd%V_g_o, &
            bd%As_o, bd%c_1_o)
      case ('UNNO')
         call eval_atmos_coeffs_unno(ml, pt_o, bd%V_g_o, &
            bd%As_o, bd%c_1_o)
         bd%U_o = ml%coeff(I_U, pt_o)
      case ('JCD')
         call eval_atmos_coeffs_isothrm(ml, pt_o, bd%V_g_o, &
            bd%As_o, bd%c_1_o)
      case ('GAMMA2')
         bd%V_g_o = ml%coeff(I_V_2, pt_o)*pt_o%x**2/ml%coeff(I_GAMMA_1, pt_o)
         bd%U_o = ml%coeff(I_V_2, pt_o)
      end select

      bd%V_2_o = ml%coeff(I_V_2, pt_o)
      bd%U_o = ml%coeff(I_U, pt_o)
      bd%c_1_o = ml%coeff(I_C_1, pt_o)

      bd%Omega_rot_o = cx%Omega_rot(pt_o)

      ! Other initializations

      bd%n_i = 2
      bd%n_o = 2

      bd%n_e = 4

      ! Finish

      return

   end function ${P}$_ad_bound_t_

