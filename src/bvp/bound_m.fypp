#:include 'gyre.inc'

module bound_m

   ! No implicit typing

   implicit none (type, external)

   #:for T, S in zip(DTYPE_BASE_TYPES, DTYPE_SUFFIXES)

      ! Derived-type definitions

      type, abstract :: bound_${S}$
         integer :: n_b
         integer :: n_e
      contains
         procedure(build_${S}$_), deferred :: build
      end type bound_${S}$

      ! Interfaces

      abstract interface

         subroutine build_${S}$_(this, st, B)
            use forum_m, only: RD
            use state_m
            import bound_${S}$
            implicit none (type, external)
            class(bound_${S}$), intent(in) :: this
            class(state_${S}$), intent(in) :: st
            ${T}$, intent(out)             :: B(:,:)
         end subroutine build_${S}$_

      end interface

      ! Access specifiers

      public :: bound_${S}$

   #:endfor

   ! Default access

   private

end module bound_m
