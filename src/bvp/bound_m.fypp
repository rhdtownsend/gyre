#:include 'core.inc'

module bound_m

   ! Uses
   
   use kinds_m

   ! No implicit typing

   implicit none

   #:for T, S in zip(DTYPE_BASE_TYPES, DTYPE_SUFFIXES)
   
      ! Derived-type definitions

      type, abstract :: bound_${S}$
         integer :: n_i
         integer :: n_o
         integer :: n_e
      contains
         procedure(build_${S}$_), deferred :: build_i
         procedure(build_${S}$_), deferred :: build_o
      end type bound_${S}$

      ! Interfaces

      abstract interface

         subroutine build_${S}$_(this, st, B, scl)
            use kinds_m
            use state_m
            import bound_${S}$
            class(bound_${S}$), intent(in) :: this
            class(state_${S}$), intent(in) :: st
            ${T}$, intent(out)             :: B(:,:)
            ${T}$, intent(out)             :: scl(:)
         end subroutine build_${S}$_

      end interface

      ! Access specifiers

      public :: bound_${S}$

   #:endfor

   ! Default access    

   private
      
end module bound_m
