   subroutine build_o_jcd_(this, st, B)

      class(${P}$_nad_bound_t), intent(in) :: this
      class(state_ct), intent(in)          :: st
      complex(RD), intent(out)             :: B(:,:)

      complex(RD) :: omega_c
      complex(RD) :: i_omega_c
      complex(RD) :: lambda
      complex(RD) :: l_e
      complex(RD) :: f_rht
      complex(RD) :: chi
      complex(RD) :: b_11
      complex(RD) :: b_12

      @:CHECK_BOUNDS(SIZE(B, 1), this%n_o)
      @:CHECK_BOUNDS(SIZE(B, 2), this%n_e)

      ! Evaluate the outer boundary conditions ([Chr2008] formulation)

      associate( &
         omega => st%omega, &
         V => this%V_o, &
         V_g => this%V_g_o, &
         As => this%As_o, &
         U => this%U_o, &
         c_1 => this%c_1_o, &
         nabla_ad => this%nabla_ad_o, &
         c_thn => this%c_thn_o, &
         Omega_rot => this%Omega_rot_o, &
         branch => this%branch_o, &
         alpha_grv => this%cx%alpha_grv, &
         alpha_gbc => this%cx%alpha_gbc, &
         alpha_rht => this%cx%alpha_rht, &
         alpha_omg => this%cx%alpha_omg, &
         m => this%cx%m)

         omega_c = omega - m*Omega_rot

         i_omega_c = (0._RD,1._RD)*sqrt(CMPLX(alpha_omg, KIND=RD))*omega_c

         lambda = this%cx%lambda(Omega_rot, st)
         l_e = this%cx%l_e(Omega_rot, st)

         f_rht = 1._RD - 0.25_RD*alpha_rht*i_omega_c*c_thn

         chi = atmos_chi(V_g, As, c_1, alpha_omg, omega_c, lambda, branch)

         b_11 = V_g - 3._RD
         b_12 = lambda/(c_1*alpha_omg*omega_c**2) - V_g

         ! Set up the boundary conditions

         #:include 'B_o_jcd.inc'

      end associate

      ! Finish

      return

   end subroutine build_o_jcd_

