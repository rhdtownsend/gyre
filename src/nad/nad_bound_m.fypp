      procedure(build_), pointer :: build_o_
   contains
      private
      procedure, public :: build_i
      procedure, public :: build_o
   end type ${P}$_nad_bound_t

   ! Interfaces

   interface
      subroutine build_(this, st, B)
         use forum_m, only: RD
         use state_m
         import ${P}$_nad_bound_t
         class(${P}$_nad_bound_t), intent(in) :: this
         class(state_ct), intent(in)          :: st
